<div class="collection__page">
  {% paginate collection.products by section.settings.collection-products__number-per-page %}
    <h1 class="collection__page-title">{{ collection.title }}</h1>
    <div class="collection__page-grid">
      {% for product in collection.products %}
        <div class="collection__page-product">
          <div class="collection__page-image">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}">
            {% else %}
              {{ 'product-1' | placeholder_svg_tag }}
            {% endif %}
          </div>
          <div class="collection__page-prodcont">
            <span>{{ product.vendor }}</span>
            <a href="{{ product.url }}">{{ product.title }}</a>
            <p>{{ product.price | money }}</p>
          </div>
        </div>
      {% else %}
        <p>There are no products inside of this collection!</p>
      {% endfor %}
    </div>
    {% comment %} PAGINATION is parameter which is used in the snippet file /snippet-pagination.liquid/ {% endcomment %}
    {% comment %} PAGINATE is the value which are passing to PAGINATION parameter {% endcomment %}
    {% render 'snippet-pagination', pagination: paginate %}
  {% endpaginate %}
</div>


{% schema %}
  {
    "name": "Template collection",
    "settings": [
      {
        "type": "number",
        "id": "collection-products__number-per-page",
        "default": 4,
        "label": "Number of products per page"
      }
    ]
  }
{% endschema %}