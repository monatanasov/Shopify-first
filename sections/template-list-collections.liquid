<div class="list-collections">
  <div class="list-collections__title">
    <h1>{{ section.settings.title }}</h1>
  </div>
  <div class="list-collections__grid">
    {% for collection in collections %}
      <div class="list-collections__wrapper">
        {% if collection.all_products_count > 0 %}
          <div class="list-collections__image">
            {% if collection.featured_image != blank %}
              {% assign collection_image = collection.featured_image %}
            {% else %}
              {% assign collection_image = collection.products.first.image %}
            {% endif %}
            <img src="{{ collection_image | img_url: 'large' }}" alt="{{ collection.title | escape }}">
          </div>
          <div class="list-collections__collection-title">
            <a href="{{ collection.url }}">
              <h2>{{ collection.title }}</h2>
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Template List Collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Collections",
        "label": "Title"
      }
    ]
  }
{% endschema %}